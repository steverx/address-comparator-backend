{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "DOCKERFILE",
    "dockerfilePath": "Dockerfile"
  },
  "deploy": {
    "numReplicas": 1,
    "healthcheckPath": "/health",
    "healthcheckTimeout": 60,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 3,
    "startCommand": "gunicorn --workers 4 --worker-class gthread --threads 8 --timeout 120 --bind 0.0.0.0:$PORT wsgi:app",
    "envs": {
      "FLASK_ENV": "production",
      "FLASK_DEBUG": "0",
      "PYTHONUNBUFFERED": "1",
      "GUNICORN_CMD_ARGS": "--workers 4 --worker-class gthread --threads 8 --timeout 120 --log-level debug --access-logfile - --error-logfile - --preload"
    }
  }
}